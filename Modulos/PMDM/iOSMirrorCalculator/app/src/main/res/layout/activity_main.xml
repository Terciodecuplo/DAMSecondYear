<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow>

        <TextView
            android:id="@+id/history_text"
            android:layout_span="4"
            android:text="Operations"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/result_text"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_span="4"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="70sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/acBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/light_grey"
            android:text="AC"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/signBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/light_grey"
            android:text="+/-"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="30dp" />

        <Button
            android:id="@+id/percentBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/light_grey"
            android:text="%"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="30dp" />

        <Button
            android:id="@+id/divisionBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/orange"
            android:text="/"
            android:textAlignment="center"
            android:textSize="30dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/sevenNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="7"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/eightNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="8"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/nineNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="9"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/multiplyBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/orange"
            android:text="X"
            android:textAlignment="center"
            android:textSize="30dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/fourNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="4"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/fiveNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="5"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/sixNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="6"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/sustractionBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/orange"
            android:text="-"
            android:textAlignment="center"
            android:textSize="30dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/oneNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="1"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/twoNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="2"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/threeNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text="3"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/additionBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/orange"
            android:text="+"
            android:textAlignment="center"
            android:textSize="30dp" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/zeroNumberBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_span="2"
            android:backgroundTint="@color/dark_grey"
            android:text="0"
            android:textAlignment="viewStart"
            android:textSize="30dp" />

        <Button
            android:id="@+id/decimalBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/dark_grey"
            android:text=","
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/equalBtn"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/orange"
            android:text="="
            android:textAlignment="center"
            android:textSize="30dp" />

    </TableRow>

</TableLayout>